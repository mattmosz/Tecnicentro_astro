      function populateClientesSelect() {
        console.log("üîÑ Poblando select de clientes...");
        const select = document.getElementById("clienteSelect");
        if (!select) {
          console.error("‚ùå No se encontr√≥ el select clienteSelect");
          return;
        }
        
        select.innerHTML = '<option value="">Seleccionar cliente</option>';

        clientes.forEach((cliente) => {
          const option = document.createElement("option");
          option.value = cliente.id;
          
          let nombre;
          if (cliente.tipo === "particular") {
            // Para clientes particulares, usar nombres y apellidos
            const nombres = cliente.nombres || "";
            const apellidos = cliente.apellidos || "";
            nombre = `${nombres} ${apellidos}`.trim();
          } else {
            // Para instituciones, usar raz√≥n social
            nombre = cliente.razon_social || "Sin nombre";
          }
          
          option.textContent = `${nombre} (${cliente.identificacion})`;
          select.appendChild(option);
        });
        console.log("‚úÖ Select poblado con", clientes.length, "clientes");
      }

      function populateVehiculosSelect() {
        const select = document.getElementById("vehiculoSelect");

        if (vehiculos.length === 0) {
          select.innerHTML = '<option value="">No hay veh√≠culos registrados para este cliente</option>';
          select.disabled = true;
          return;
        }

        select.innerHTML = '<option value="">Seleccionar veh√≠culo</option>';
        select.disabled = false;

        vehiculos.forEach((vehiculo) => {
          const option = document.createElement("option");
          option.value = vehiculo.id;
          option.textContent = `${vehiculo.placa} - ${vehiculo.marca}`;
          select.appendChild(option);
        });
      }

      function agregarServicio() {
        const container = document.getElementById("serviciosContainer");
        const noServiciosMsg = document.getElementById("noServiciosMsg");
        const totalSection = document.getElementById("totalSection");
        
        // Ocultar mensaje de "no servicios" al agregar el primero
        if (noServiciosMsg) {
          noServiciosMsg.style.display = "none";
        }
        
        // Mostrar secci√≥n de total
        if (totalSection) {
          totalSection.style.display = "block";
        }
        
        const div = document.createElement("div");
        div.className = "servicio-item";
        
        console.log("üîß Generando HTML para servicio...");
        console.log("üìä Servicios disponibles:", servicios.length);
        if (servicios.length > 0) {
          console.log("üè∑Ô∏è Primer servicio de ejemplo:", servicios[0]);
        }
        
        div.innerHTML = `
          <div class="servicio-row">
            <div class="servicio-select-field">
              <label>Servicio</label>
              <select name="servicios[${servicioIndex}][id_servicio]" class="input servicio-select" onchange="window.cargarPrecioServicio(this, ${servicioIndex})" required>
                <option value="">Seleccionar servicio</option>
                ${servicios.map(s => `<option value="${s.id}" data-precio="${s.precio_unitario || 0}">${s.codigo} - ${s.descripcion}</option>`).join('')}
              </select>
            </div>
            <div class="cantidad-field">
              <label>Cant.</label>
              <input 
                type="number" 
                name="servicios[${servicioIndex}][cantidad]" 
                id="cantidad_${servicioIndex}"
                placeholder="1" 
                class="input" 
                min="1" 
                value="1" 
                onchange="window.calcularSubtotal(${servicioIndex})"
                required
              />
            </div>
            <div class="precio-field">
              <label>Precio</label>
              <input 
                type="number" 
                name="servicios[${servicioIndex}][precio_unitario]" 
                id="precio_${servicioIndex}"
                placeholder="0.00" 
                class="input" 
                step="0.01" 
                min="0" 
                onchange="window.calcularSubtotal(${servicioIndex})"
                required
              />
            </div>
            <div class="accion-field">
              <button type="button" class="btn btn-outline btn-small btn-eliminar" onclick="window.eliminarServicio(this)">
                ‚úñ
              </button>
            </div>
          </div>
          <div class="subtotal-row" id="subtotal_${servicioIndex}" style="display: none;">
            <small class="text-muted">Subtotal: $<span class="subtotal-amount">0.00</span></small>
          </div>
        `;
        
        container.appendChild(div);
        servicioIndex++;
        
        console.log(`‚úÖ Servicio agregado con √≠ndice ${servicioIndex - 1}`);
        // Verificar que los elementos se crearon correctamente
        setTimeout(() => {
          const cantidadInput = document.getElementById(`cantidad_${servicioIndex - 1}`);
          const precioInput = document.getElementById(`precio_${servicioIndex - 1}`);
          const subtotalDiv = document.getElementById(`subtotal_${servicioIndex - 1}`);
          console.log("üîç Elementos creados:", {
            cantidad: !!cantidadInput,
            precio: !!precioInput,
            subtotal: !!subtotalDiv
          });
        }, 100);
      }

      function eliminarServicio(button) {
        const servicioItem = button.closest('.servicio-item');
        servicioItem.remove();
        
        // Mostrar mensaje si no hay servicios
        const container = document.getElementById("serviciosContainer");
        const serviciosRestantes = container.querySelectorAll('.servicio-item');
        const noServiciosMsg = document.getElementById("noServiciosMsg");
        const totalSection = document.getElementById("totalSection");
        
        if (serviciosRestantes.length === 0) {
          if (noServiciosMsg) {
            noServiciosMsg.style.display = "block";
          }
          if (totalSection) {
            totalSection.style.display = "none";
          }
        } else {
          // Recalcular total despu√©s de eliminar
          calcularTotalGeneral();
        }
      }
      
      // Hacer funci√≥n global
      window.eliminarServicio = eliminarServicio;

      function limpiarServicios() {
        document.getElementById("serviciosContainer").innerHTML = `
          <div class="no-servicios" id="noServiciosMsg">
            <p>No hay servicios agregados. Haz clic en "Agregar Servicio" para comenzar.</p>
          </div>
        `;
        
        // Ocultar secci√≥n de total
        const totalSection = document.getElementById("totalSection");
        if (totalSection) {
          totalSection.style.display = "none";
        }
        
        servicioIndex = 0;
      }

      // Formulario de orden actualizado
      if (ordenForm) {
        ordenForm.addEventListener("submit", async (e) => {
          e.preventDefault();
          console.log("üîÑ Enviando formulario de orden...");

          const clienteSel = document.getElementById("clienteSelect");
          const vehiculoSel = document.getElementById("vehiculoSelect");

          const id_cliente = clienteSel?.value ? Number(clienteSel.value) : NaN;
          const id_vehiculo = vehiculoSel?.value ? Number(vehiculoSel.value) : NaN;
          const observaciones = ordenForm.observaciones.value?.trim() || "";

          if (!Number.isFinite(id_cliente)) {
            showToast("Selecciona un cliente.");
            return;
          }
          if (!Number.isFinite(id_vehiculo)) {
            showToast("Selecciona un veh√≠culo.");
            return;
          }

          // Construir detalle de servicios
          const rows = Array.from(document.querySelectorAll("#serviciosContainer .servicio-item"));
          const detalle = rows
            .map((row) => {
              const sel = row.querySelector('select[name^="servicios"]');
              const qty = row.querySelector('input[name*="[cantidad]"]');
              const prc = row.querySelector('input[name*="[precio_unitario]"]');
              const id_servicio = sel?.value ? Number(sel.value) : NaN;
              const cantidad = qty?.value ? Number(qty.value) : NaN;
              const precio_unitario = prc?.value ? Number(prc.value) : NaN;
              
              if (
                Number.isFinite(id_servicio) && id_servicio > 0 &&
                Number.isFinite(cantidad) && cantidad > 0 &&
                Number.isFinite(precio_unitario) && precio_unitario >= 0
              ) {
                return {
                  id_servicio,
                  cantidad,
                  precio_unitario,
                };
              }
              return null;
            })
            .filter(Boolean);

          if (!detalle.length) {
            showToast("Agrega al menos un servicio con cantidad y precio.");
            return;
          }

          console.log("üìä Datos de la orden:", {
            id_vehiculo,
            observaciones,
            servicios: detalle,
          });

          const payload = {
            id_vehiculo,
            observaciones,
            servicios: detalle,
          };

          const token = localStorage.getItem("token");

          try {
            console.log("üì° Enviando orden al servidor...");
            const r = await fetch("/api/ordenes", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
                Accept: "application/json",
                Authorization: `Bearer ${token}`,
              },
              body: JSON.stringify(payload),
            });

            console.log("üì° Respuesta del servidor:", r.status);

            let j = null;
            try {
              j = await r.json();
              console.log("üìã Datos de respuesta:", j);
            } catch (error) {
              console.error("‚ùå Error parseando JSON:", error);
              j = null;
            }

            if (!r.ok || !j?.success) {
              console.error("‚ùå Error API", r.status, j);
              const msg = (j && (j.message || j.error)) || `HTTP ${r.status}`;
              showToast("Error al guardar la orden: " + msg);
              return;
            }

            console.log("‚úÖ Orden creada exitosamente:", j.numero_orden);
            
            // Cerrar modal
            ordenModal.style.display = "none";
            ordenModal.classList.remove("show");
            ordenModal.removeAttribute("open");
            
            // Actualizar vista
            console.log("üîÑ Actualizando vista...");
            await cargarMisOrdenes();
            
            showToast(`Orden ${j.numero_orden} creada exitosamente`);

          } catch (err) {
            console.error("‚ùå Error guardando orden", err);
            showToast("Error de red al guardar la orden");
          }
        });
      }
    });
