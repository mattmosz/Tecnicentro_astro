      // ---------- utils ----------
      function debounce(fn, t = 300) {
        let id;
        return (...args) => {
          clearTimeout(id);
          id = setTimeout(() => fn(...args), t);
        };
      }

      // ---------- FUNCIONES DEL MODAL ADMIN ADAPTADAS ----------
      async function loadClientes() {
        console.log("üîÑ Cargando clientes...");
        const token = localStorage.getItem("token");
        try {
          const response = await fetch("/api/clientes/all", {
            headers: { Authorization: `Bearer ${token}` },
          });
          const result = await response.json();
          console.log("üìã Respuesta clientes:", result);
          if (result.success) {
            clientes = result.data || [];
            console.log("‚úÖ Clientes cargados:", clientes.length);
