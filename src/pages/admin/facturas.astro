    if (closeDetalle) {
      closeDetalle.addEventListener("click", () => {
        const modal = document.getElementById("modalDetalleFactura");
        if (modal && modal.close) modal.close();
      });
    }

    const btnCerrarDetalle = document.getElementById("btnCerrarDetalle");
